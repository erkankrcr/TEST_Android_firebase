<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/logo"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="250dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"
                android:text="Medipol Üniversitesi Personel Platformu"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/SigninNameAndSurnameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="İsim Ve Soyisim"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:background="#ffff"/>
            <EditText
                android:id="@+id/SigninEmailEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="E-Posta"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:background="#ffff"/>

            <EditText
                android:id="@+id/SigninSifreEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:hint="Şifre"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:background="#ffff"/>

            <Button
                android:id="@+id/SigninCompleteBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#0084FF"
                android:text="Kayıt Tamamla"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>